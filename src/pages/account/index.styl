@import '~@/assets/css/variables.styl'
.account-index
  width 100%
  height 100%
  background-color #333
  .account-form
    // padding $font * 1.5 $font * 2 ($font / 2)
    padding $font $font * 2
    background-color #fff
    width 480px
    height 320px
    border-radius $font
    &-hd
      // margin-bottom $font
      h1
        font-size $font + 4
    &-ft
      p
        font-size 12px
        color #999
    &-bd
      .account-label
        margin-top $font * 1.2
        &:first-child
          margin-top 0